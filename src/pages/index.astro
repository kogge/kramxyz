---
import Layout from '../layouts/Layout.astro';
import ohmsLawsvg from "../../public/Ohm's_Law_Pie_chart.svg"
---

<Layout title="Kräm - Välkommen">
	<main class="md:container place-content-center">
		<div class="flex justify-center pt-8">
			<img src={ohmsLawsvg.src} alt="Image of Ohms Law pie chart" class="size-80 flex-initial md:flex-none">
		</div>
		<nav class="pt-8 md:pt-16">
			<ul class="flex items-center md:justify-center flex-col md:flex-row md:gap-16 text-lg md:text-xl">
				<li class="text-white hover:text-black hover:underline bg-[#bd9ac8] hover:bg-[#fbcdcf] focus:outline-none focus:ring-4 focus:ring-purple-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mb-2"><a href="/om">OM</a></li>
				<li class="text-white hover:text-black hover:underline bg-[#2e9964] hover:bg-[#a4d395] focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2"><a href="/rakna">RÄKNA</a></li>
				<li class="text-white hover:text-black hover:underline bg-[#9ccbed] hover:bg-[#d1cee5] focus:outline-none focus:ring-4 focus:ring-yellow-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2"><a href="https://github.com/kogge/kramxyz">GITHUB</a></li>
			</ul>
		</nav>
	</main>
</Layout>